{
	"hosting": {
		"public": "public",
		"ignore": [
			"firebase.json",
			"**/node_modules/**",
			".env",
			"**/.*",
			"public/app/components/*.js",
			"public/app/directives/*.js",
			"public/app/interfaces/*.js",
			"public/app/modules/*.js",
			"public/app/pipes/*.js",
			"public/app/scss/*.js",
			"public/app/services/*.js",
			"public/app/*.js",
			"test/**",
			"**/*.sh",
			"**/*.md"
		],
		"headers": [
			{
				"source": "**",
				"headers": [
					{
						"key": "Access-Control-Allow-Origin",
						"value": "https://kosmosmusic-51fd1.firebaseapp.com https://kosmosmusic.ru"
					},
					{
						"key": "Access-Control-Allow-Methods",
						"value": "GET,PUT,POST,DELETE,OPTIONS,HEAD"
					}
				]
			},
			{
				"source": "**/*.@(jpg|jpeg|gif|png|svg)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=7200"
					}
				]
			},
			{
				"source": "/sendEmail",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, no-cache, no-store, must-ravalidate, max-age=0"
					},
					{
						"key": "Expires",
						"value": "-1"
					},
					{
						"key": "Pragme",
						"value": "no-cache"
					}
				]
			},
			{
				"source": "/sendDemo",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, no-cache, no-store, must-ravalidate, max-age=0"
					},
					{
						"key": "Expires",
						"value": "-1"
					},
					{
						"key": "Pragme",
						"value": "no-cache"
					}
				]
			},
			{
				"source": "/sendBookingRequest",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, no-cache, no-store, must-ravalidate, max-age=0"
					},
					{
						"key": "Expires",
						"value": "-1"
					},
					{
						"key": "Pragme",
						"value": "no-cache"
					}
				]
			},
			{
				"source": "/saveEmailSubscription",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, no-cache, no-store, must-ravalidate, max-age=0"
					},
					{
						"key": "Expires",
						"value": "-1"
					},
					{
						"key": "Pragme",
						"value": "no-cache"
					}
				]
			}
		],
		"rewrites": [
			{
				"source": "/sendEmail",
				"function": "sendEmail"
			},
			{
				"source": "/sendDemo",
				"function": "sendDemo"
			},
			{
				"source": "/sendBookingRequest",
				"function": "sendBookingRequest"
			},
			{
				"source": "/saveEmailSubscription",
				"function": "saveEmailSubscription"
			},
			{
				"source": "**/!(sendEmail|sendDemo|sendBookingRequest|saveEmailSubscription)",
				"destination": "/index.html"
			}
		]
	}
}
